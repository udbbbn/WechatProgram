page {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: url('https://raw.githubusercontent.com/udbbbn/Img/master/42.jpg');
  background-size: 100% 100%;
}
.container {
  width: 80%;
}
input {
  height: 80rpx;
  margin-bottom: 40rpx;
  border: 1px solid #bb4e55;
  border-radius: 10rpx;
  text-align: center;
  color: #bb4e55;
}
input ::-webkit-input-placeholder {
  color: #bb4e55;
}
input ::-moz-placeholder {
  color: #bb4e55;
}
input :-ms-input-placeholder {
  color: #bb4e55;
}
input :placeholder {
  color: #bb4e55;
}
